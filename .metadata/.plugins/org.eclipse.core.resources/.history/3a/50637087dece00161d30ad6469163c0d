<script type="text/javascript">
	apiready = function(){
		
	};
	var dataload = true;
	function ajaxinfo(){
		if (dataload == false) {
			return false;
		}
		dataload = false;
		var typeid=api.pageParam.typeid;
		loadingshow();
		var url="/app/hot_tagslist.html?"+ (new Date()).getTime().toString();
		var data={
			
		}
		$(".nocontact").hide();
		zzappajax("get",hosturl+url,data,function(ret){
			var pageHtml = "";
			pagecount=ret.pagecount;
			$.each(ret.result, function(index, item) {
				var getTpl = $api.html($api.byId("info-list-xiao"));
				
				laytpl(getTpl).render(item, function(html) {
					pageHtml = pageHtml + html;
				});
			})
			if (currPage == 1) {
				if (pageHtml==""){
            		$(".nodata").show();
            		$(".la_more").hide();
            	}else{
            		$(".nodata").hide();
            		$(".la_more").show();
                }
                $(".xiaonewslist").html(pageHtml);
                api.pageUp({
					'top' : true
				});
            }else{
				$(".xiaonewslist").append(pageHtml);
            }
            if (pageHtml!=""){
				currPage += 1;
				$(".la_more").html("上拉获取更多信息");
			}else{
				$(".la_more").html("全部加载完毕");
			}
			api.refreshHeaderLoadDone();
			dataload = true;
			loadinghide()
		},function(){
			api.toast({
				msg : '网络错误，请重试！',
				duration : 2000,
				location : 'bottom'
			});
			$(".nocontact").show();
			dataload = true;
			loadinghide()
		})
	}
</script>
