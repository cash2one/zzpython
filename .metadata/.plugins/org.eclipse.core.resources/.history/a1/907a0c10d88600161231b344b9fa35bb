	<script type="text/javascript">
		var paymoney=0;
		var datevalue=0;
		var djqlist ="0";//代金券ID
		var xiumovalue="h1"; //模板ID
		apiready = function() {
			var closeiosflag = $api.getStorage("closeiosflag");
			if (!closeiosflag || closeiosflag == 1) {
				$(".buybutton").hide();
			}
			$("body").on("click",".buybutton",function() {
				event.stopPropagation();
				if (havelogin()) {
					paysubmit();
				}
			})
			$("body").on("click",".aui-radio",function() {
				event.stopPropagation();
				getmoneyall();
			})
			$("body").on("click",".aui-checkbox", function() {
				event.stopPropagation();
				getmoneyall();
			})
			$(".youhuiservice").on("click","li", function() {
				event.stopPropagation();
				var url=$(this).attr("url");
				var index=$(this).attr("index");
				var wintitle=$(this).find(".goodsname").text();
				var pageParam = {
					wintitle : wintitle,
					type : "serviceshow"+index,
					bounces : false,
				};
				openWin("youhui"+index, url, pageParam);
			});
			$("body").on("click", ".shili",function() {
				var adurl=$(this).attr("url");
				var pageParam = {
					wintitle : "企业秀案例展示",
					type : "cshow",
					bounces : false
				};
				openWin("cshow", adurl, pageParam);
			})
			getmoneyall();
			ajaxInfo();
			
		};
		function getmoneyall(){
			var showselect=0;
			$('input[name="compxiu"]:checked').each(function(){
				showselect+=parseInt($(this).attr("money"));
				datevalue=$(this).val();
			});
			$('input[name="xiumo"]:checked').each(function(){
				xiumovalue=$(this).val();
			});
			djqlist="0";
			$('input[name="daijqcheck"]:checked').each(function(){
				showselect+=parseInt($(this).attr("money"));
				djqlist+=","+$(this).val();
			});
			$(".paymoney").html("¥<strong>"+showselect+"</strong>元");
			paymoney=showselect;
		}
		function ajaxInfo(){
			//获取我的代金券
			var data={
				qtype_id:39
			}
			zzappajax("get",hosturl+"qianbao/mydaijinquan.html",data,function(ret){
				var pageHtml = "";
				$.each(ret, function(index, item) {
					var getTpl = $api.html($api.byId("info-list"));
					laytpl(getTpl).render(item, function(html) {
						pageHtml = pageHtml + html;
					});
				});
				$(".daijqmain").html(pageHtml);
				if (pageHtml==""){
					$(".daijinquanbox").hide();
				}else{
					$(".daijinquanbox").show();
				}
			},function(){});
			
			data={};
			zzappajax("get",hosturl+"qianbao/youhuilist.html",data,function(ret){
				var pageHtml = "";
				$.each(ret.list, function(index, item) {
					var getTpl = $api.html($api.byId("youhui-list"));
					laytpl(getTpl).render(item, function(html) {
						pageHtml = pageHtml + html;
					});
				});
				$(".youhuiservice").html(pageHtml);
				
			},function(){});
			
		}
		//购买显示联系方式
		function paysubmit() {
			api.showProgress({
				title : '扣款中...',
				modal : false
			});
			var company_id = UserInfo.memberID();
			var usertoken = UserInfo.token();
			var data = {
				paytype : '39',
				money : paymoney,
				company_id : company_id,
				usertoken : usertoken,
				appsystem : api.systemType,
				datatype : 'json',
				t : (new Date()).getTime().toString(),
				voucher_id:djqlist,
				datevalue:datevalue,
				xiumovalue:xiumovalue,
			}
			api.ajax({
				url : hosturl + 'qianbao/qianbaopay.html',
				method : 'get',
				timeout : 30,
				dataType : 'json',
				returnAll : false,
				data : {
					values : data
				}
			}, function(ret, err) {
				zzalert(JSON.stringify(ret))
				if (ret) {
					if (ret.err == 'false') {
						//zzalert(ret.errtext);
						api.confirm({
							title : '提示',
							msg : ret.errtext,
							buttons : ['关闭', '查看我的服务']
						}, function(ret, err) {
							if (ret) {
								if (ret.buttonIndex == 2) {
									var pageParam = {
										wintitle : "我的服务",
										type : "myservice",
									};
									openWin("myservice", "../service/myservice.html", pageParam);
								} else {
									api.closeWin();
								}
								} else {
								}
							});
						}
						if (ret.err == 'true' && ret.blanceflag == '0') {
							yuebuzuFun();
						}
						if (ret.err == 'true' && ret.blanceflag == '1') {
							zzalert(ret.errtext);
						}
						api.hideProgress();
					} else {
						api.hideProgress();
						if (err) {
							saveerrlog(err.body);
						}
					};
				});
				
		}

		function showcontactcheck(valu) {
			$("#showcontactvalue").val(valu);
		}
	</script>
