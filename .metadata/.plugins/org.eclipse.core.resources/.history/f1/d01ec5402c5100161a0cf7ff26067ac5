	<script type="text/javascript">
		var footerheight = $("body").height();
		apiready = function() {
			footerheight = api.pageParam.footerheight;
			var nav_list = [{
				"typename" : "热门",
				"id" : 1,
				"url":"../list/list1.html",
				"pageParam":""
			}, {
				"typename" : "喜欢",
				"id" : 2,
				"url":"../list/list1.html",
				"pageParam":""
			}, {
				"typename" : "推荐",
				"id" : 2,
				"url":"../list/list1.html",
				"pageParam":""
			}] //头部划动标题
			
			getNavlist(nav_list,"list1");
			
			$(".aui-title").on("click", "li", function() {
				var type = $(this).attr("type");
				var openflag=$(this).attr("openflag");
				//alert(openflag)
				$(".aui-title").find('li').removeClass('on');
				$(this).addClass('on');
				if (type=="gz"){
					openguanzhu()
				}else{
					opentuijian();
				}
				
			})
		}
		//打开推荐列表
		function opentuijian(){
			var nav_list = [{
				"typename" : "热门",
				"url":"../list/list1.html",
				"pageParam":""
			}, {
				"typename" : "喜欢",
				"url":"../list/list1.html",
				"pageParam":""
			}, {
				"typename" : "推荐",
				"url":"../list/list1.html",
				"pageParam":""
			}] //头部划动标题
			$(".aui-title").html('<ul><li class="on" type="tj" openflag="0">推荐<li><li class="line"></li><li type="gz" openflag="0">关注<li></ul>')
			getNavlist(nav_list,"list1");
			cloasegroupall();
			api.setFrameGroupAttr({
				name : 'list1_group',
				hidden : false
			});
			$("#list2_navmark").hide();
			$("#list1_navmark").show();
			openFrame("list1",nowindex["list1"])
		}
		//打开关注列表
		function openguanzhu(){
			var nav_list = [{
				"typename" : "热门",
				"url":"../list/list1.html",
				"pageParam":""
			}, {
				"typename" : "喜欢",
				"url":"../list/list1.html",
				"pageParam":""
			}, {
				"typename" : "推荐",
				"url":"../list/list1.html",
				"pageParam":""
			}, {
				"typename" : "推荐",
				"url":"../list/list1.html",
				"pageParam":""
			}, {
				"typename" : "推荐",
				"url":"../list/list1.html",
				"pageParam":""
			}] //头部划动标题
			
			getNavlist(nav_list,"list2");
			cloasegroupall();
			api.setFrameGroupAttr({
				name : 'list2_group',
				hidden : false
			});
			$("#list1_navmark").hide();
			$("#list2_navmark").show();
			openFrame("list2",nowindex["list2"])
		}
		
		//关闭所有group
		function cloasegroupall(){
			for (i=1;i<=5;i++){
				api.setFrameGroupAttr({
					name : 'list'+i+'_group',
					hidden : true
				});
				$("#list"+i+"_navmark").hide();
			}
		}
		function openscrollgroup(listname){
			var nav_list = [{
				"typename" : "热门1",
				"url":"../list/list1.html",
				"pageParam":""
			}, {
				"typename" : "喜欢1",
				"url":"../list/list1.html",
				"pageParam":""
			}, {
				"typename" : "推荐1",
				"url":"../list/list1.html",
				"pageParam":""
			}, {
				"typename" : "最新1",
				"url":"../list/list1.html",
				"pageParam":""
			}, {
				"typename" : "最新1",
				"url":"../list/list1.html",
				"pageParam":""
			}, {
				"typename" : "最新1",
				"url":"../list/list1.html",
				"pageParam":""
			}] //头部划动标题
			if (listname=="list1"){
				$(".aui-title").html('<ul><li class="on" type="tj" openflag="0">推荐<li><li class="line"></li><li type="gz" openflag="0">关注<li></ul>')
			}
			if (listname=="list3"){
				$(".aui-title").html("健康")
			}
			if (listname=="list4"){
				$(".aui-title").html("家庭")
			}
			if (listname=="list5"){
				$(".aui-title").html("工作")
			}
			
			getNavlist(nav_list,listname);
			cloasegroupall()
			api.setFrameGroupAttr({
				name : listname+'_group',
				hidden : false
			});
			$("#"+listname+"_navmark").show();
			openFrame(listname,nowindex[listname])
		}
