<script type="text/javascript" src="../../script/api.js"></script>
<script type="text/javascript" src="../../script/zepto.min.js"></script>
<script type="text/javascript" src="../../script/jquery.js"></script>
<script type="text/javascript" src="../../script/common.js"></script>
<script type="text/javascript" src="../../script/laytpl.js"></script>
<script type="text/javascript" src="../../script/aui-scroll.js" ></script>
<script type="text/javascript">
	var currPage = 1;
	var pagecount=0;
	apiready = function(){
		$api.setStorage("priceindexopenflag", 1);
		changeserverurl();
		//获取我的定制
		getmyorder();
		ajaxInfo();
		
		var scroll = new auiScroll({
	        listen:true,
	        distance:200 //判断到达底部的距离，isToBottom为true
	    },function(ret){
	        if(ret.isToBottom){
	        }else{
		        if (ret.scrollTop>150){
		        	$(".topdiv").fadeIn();
		        }else{
		        	$(".topdiv").fadeOut();
		        }
		        if (ret.scrollTop>100){
		        	$(".boxhearder2").fadeIn();
		        }else{
		        	$(".boxhearder2").fadeOut();
		        }
		        
	        }
	    });
	    //页面刷新
		api.setRefreshHeaderInfo({
			visible : true,
			// bgColor: '#F2F2F2',
			bgColor : '#E6E6E6',
			textColor : '#000000',
			textDown : '下拉刷新',
			textUp : '释放刷新',
		}, function(ret, err) {
			
			currPage = 1;
			//获取我的定制
			getmyorder();
			ajaxInfo();
			api.toast({
				msg : '数据已是最新！',
				duration : 3000,
				location : 'bottom'
			});
		});
		//底部加载更多
		api.addEventListener({
			name : 'scrolltobottom'
		}, function(ret, err) {
			if (currPage>pagecount){
				$(".la_more").html("全部加载完毕");
				return false;
			}
			$(".la_more").html("加载更多中...");
			setTimeout(function() {
				ajaxInfo();
			}, 10)
		});
	    //立即订阅
		$(".orderbutton").on("click",function() {
			var pageParam = {
				wintitle : "订阅行情",
				type : "order_trade",
				bounces : false
			};
			if (UserInfo.has_login()) {
				openWinNormal("order_trade", "../price/order-main.html", pageParam);
			} else {
				pageParam.nextUrl = "../price/order-main.html";
				pageParam.winName = "order_trade";
				openWin("frm-login", "../myrc/frm-login.html", pageParam);
			}
		})
	};
	//我的定制
	function getmyorder(){
		var lists={};
		if (!UserInfo.has_login()) {
			$(".noorderdiv").show();
			$(".orderright").hide();
			return;
		}
		$(".get-xinx").html("");
		lists['company_id'] = UserInfo.memberID();
		lists['usertoken'] = UserInfo.token();
		lists['appsystem'] = api.systemType;
		lists['datatype'] = 'json';
		api.ajax({
			url : hosturl + 'order/myorderprice.html',
			method : 'post',
			timeout : 30,
			dataType : 'json',
			returnAll : false,
			data : {
				values : lists
			}
		}, function(ret, err) {
			//zzalert(JSON.stringify(ret))
			if (ret) {
				if (ret.err == "true") {
					
				} else {
					if (ret.listall){
						$(".noorderdiv").hide();
						$.each(ret.listall, function(index, item) {
							var order_span = '<span><font>' + item.label + '</font></span>';
							$(".get-xinx").append(order_span);
						})
					}else{
						$(".orderright").hide();
						$(".noorderdiv").show();
					}				}
			} else {
				api.toast({
				    msg: '系统错误',
				    duration: 2000,
				    location: 'bottom'
				});
			};
			api.hideProgress();
			api.refreshHeaderLoadDone();
			//loadinghide();
		});
	}
	function ajaxInfo(){
		var data={
			page:currPage
		}
		zzappajax("get",hosturl+"price/companypricelist.html",data,function(ret){
			var pageHtml='';
			if (currPage==1){	
				pagecount=ret.count;
			}
			$.each(ret.list, function(index, item) {
				var getTpl = $api.html($api.byId("info-list"));
				laytpl(getTpl).render(item, function(html) {
					pageHtml = pageHtml + html;
				});
			})
			if (currPage == 1) {
				if (pageHtml==""){
            		$(".nodata").show();
            		$(".la_more").hide();
            	}else{
            		$(".nodata").hide();
            		$(".la_more").show();
                }
				api.pageUp({
					'top' : true
				});
				$(".companypricelist").html(pageHtml);
			} else {
				$(".companypricelist").append(pageHtml);
			}
			$(".aui-content").show();
			api.refreshHeaderLoadDone();
			api.hideProgress();
			$("#loading").hide();
			if (pageHtml!=""){
				currPage += 1;
				$(".la_more").html("上拉获取更多信息");
			}else{
				$(".la_more").html("全部加载完毕");
			}
		},function(){
		
		})
	}
</script>
</html>