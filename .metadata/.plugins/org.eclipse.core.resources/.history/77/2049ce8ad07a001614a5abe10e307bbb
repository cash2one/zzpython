<script type="text/javascript">
    apiready = function(){
        api.parseTapmode();
        openGroup();
    }
    var tab = new auiTab({
        element:document.getElementById("footer")
    },function(ret){
    	randomSwitchBtn(ret.index)
        if(ret){
            //document.getElementById("demo").textContent = ret.index;
        }
    });
    
    function openGroup(){
        //var header = $api.byId('aui-header');
        //var headerPos = $api.offset(header);
        var headerPos = $api.offset($api.dom('header')).h;
        var body_h = $api.offset($api.dom('body')).h;
        var footer_h = $api.offset($api.dom('footer')).h;
        api.openFrameGroup({
            name: 'indexGroup',
            scrollEnabled: true,
            rect:{x:0, y:headerPos, w:'auto', h:body_h - headerPos - footer_h},
            index: 1,
            frames: [{
                name:'helper_list',
                url:'main/dacong.html',
                vScrollBarEnabled:false,
                hScrollBarEnabled:false,
                bounces:false
            },{
                name:'ask_list',
                url:'main/dacong.html',
                vScrollBarEnabled:false,
                hScrollBarEnabled:false,
                bounces:false
            },{
                name:'my',
                url:'main/dacong.html',
                vScrollBarEnabled:false,
                hScrollBarEnabled:false,
                bounces:false
            }]
        }, function (ret, err) {
            //$api.removeCls($api.dom('#aui-footer li.active-info'),'active-info');
            //$api.addCls($api.byId(''+ret.name+''),'active-info');
        });
    }

    // 随意切换按钮
    function randomSwitchBtn(index) {
        api.setFrameGroupIndex({
            name: 'indexGroup',
            index: index
        });
    }
</script>
