	<script type="text/javascript" src="../../script/laytpl.js"></script>
	<script type="text/javascript">
		var code='1000'
		function closeselect() {
			api.execScript({
				name : api.winName,
				script : "keybackFun('1')"
			});
			api.closeFrame();
		}
		apiready = function() {
			changeserverurl();
			$("#categorytab").on("click","li", function() {
				code=$(this).attr("code");
				$("#categorytab li").removeClass("active");
				$(this).addClass("active");
				ajaxinfo();
			})
			
			$(".clist").on("click","span", function() {
				//code=$(this).attr("code");
				if ($(this).attr("class")=="on"){
					$(this).removeClass("on");
				}else{
					$(this).addClass("on");
				}
			})
			var $body = $api.dom('body');
			$api.addEvt($body, 'click', function(e) {
				if (e.target == $body) {
					closeselect();
				} else {
					e.stopPropagation();
				}
			});
			ajaxinfo()
		};
		function ajaxinfo(){
			var data={
				code:code
			}
			loadingshow()
			zzappajax("get",hosturl+"price/companycategory.html",data,function(ret){
				var list=''
				$.each(ret, function(index, item) {
					$.each(item.child, function(index, item1) {
						if (item1.child && item1.child!=''){
							list+="<h5>"+item1.label+"</h5>";
							list+="<div class='categorylist'>"
							$.each(item1.child, function(index, item2) {
								list+="<span>"+item2.label+"</span>"
							})
							list+="</div>"
						}else{
							list+="<div class='categorylist' style='margin-top:20px;'>"
								list+="<span>"+item1.label+"</span>"
							list+="</div>"
						}
					})
					loadinghide()
				})
				$(".clist").html(list)
			},function(){
				loadinghide()
			})
		}
		function selectbutton() {
			var selectlabel = "";
			$(".categorylist span").each(function() {
				var label = $(this).text();
				var tclass=$(this).attr("class");
				if (label && tclass=="on") {
					selectlabel += label + "|";
				}
			});
			if (selectlabel){
				selectlabel=selectlabel.substr(0,selectlabel.length-1)
			}
			api.execScript({
				name : 'price',
				frameName : 'price_',
				script : "keysearchprice('" + selectlabel.toString()+"')"
			});
			closeselect()
		}
	</script>
