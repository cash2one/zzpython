<script type="text/javascript">
	apiready = function(){
	//页面刷新
		//alert(api.winName+" "+api.frameName)
		api.setRefreshHeaderInfo({
			visible : true,
			// bgColor: '#F2F2F2',
			loadingImg: 'widget://image/refresh.png',
			bgColor : '#E6E6E6',
			textColor : '#000000',
			textDown : '下拉刷新',
			textUp : '释放刷新',
		}, function(ret, err) {
			currPage = 1;
			ajaxinfo();
			api.toast({
				msg : '数据已是最新！',
				duration : 3000,
				location : 'bottom'
			});
		});
		$("body").on("click",".remen",function(){
			var wintitle=$(this).attr("typename");
			var pageParam = {
	          wintitle:wintitle,
	          type:"remen",
	          typeid:typeid,
	          bounces:false,
	          footerheight:0,
	        };
	        //alert(infoid)
	        $(this).find(".noreadnews").css("display","none");
	        openWinNormal("remen","../main/mainlist.html",pageParam);
        })
        
        $("body").on("click","#orderbutton",function(){
			var pageParam = {
	          wintitle:"我的关注",
	          type:"myguanzhu",
	          bounces:false,
	          footerheight:0,
	        };
	        openWin("myguanzhu","../my/myorder.html",pageParam);
        })
        
		ajaxinfo();
	};
	function ajaxinfo(){
        var data={
			type:"gz",
		}
		loadingshow();
		zzappajax("get",hosturl+"/app/navlist.html?"+ (new Date()).getTime().toString(),data,function(ret){
			var pageHtml="";
			$.each(ret, function(index, item) {
				var noreadnews=item.piclist.noreadcount;
				//alert(noreadnews)
				if (parseInt(noreadnews)>0){
					item.display=""
				}else{
					item.display="none"
				}
				if (noreadnews>99){
					item.piclist.noreadcount="99+"
				}
				if (!item.piclist.title){
					item.piclist.pubdate='';
					item.piclist.title='';
					item.piclist.pic='../../image/noweb.jpg';
				}
				var getTpl = $api.html($api.byId("info-list"));
				laytpl(getTpl).render(item, function(html) {
					pageHtml = pageHtml + html;
				});
			})
			$(".aui-list").html(pageHtml)
			if (pageHtml==""){
				$(".nodata").show();
				$(".aui-content").hide();
			}else{
				$(".nodata").hide();
				$(".aui-content").show();
			}
			api.refreshHeaderLoadDone();
			loadinghide();
		},function(){
			loadinghide();
			api.refreshHeaderLoadDone();
		})
	}
</script>
