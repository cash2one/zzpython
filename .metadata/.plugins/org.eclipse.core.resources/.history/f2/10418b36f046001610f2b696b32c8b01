<script type="text/javascript" src="../script/common.js"></script>
<script type="text/javascript">
	var frame1 = 0, frame2 = 0, frame3 = 0 ,frame4=0;
	apiready = function() {
		//$api.fixStatusBar( $api.dom('header') );
		api.setStatusBarStyle({
			style : 'dark',
			color : '#01ba2e'
		});
		var body_h = api.winHeight;
		var footer_h = $("footer").height();
		var fheight = body_h - footer_h;
		$(".aui-bar-tab").on("click", "li", function() {
			var index = $(this).attr("index");
			//把当前窗口推到前面
			api.bringFrameToFront({
				from : 'frame' + index,
			});
			api.setFrameGroupAttr({
				name : 'framegroup'+index,
				hidden : false
			});
			api.setFrameAttr({
				name : 'frame'+index,
				hidden : false
			});
			//隐藏group
			for (i=1;i<=4;i++){
				if (i!=index){
					api.setFrameGroupAttr({
						name : 'framegroup'+i,
						hidden : true
					});
				}
			}
			//
			api.setFrameClient({
				frameName : "frame"+index
			}, function(ret, err) {
				//范围：0-开始加载；1-加载进度发生变化；2-结束加载；3-title发生变化；4-url发生变化
				if (ret.state == 2) {
					$("#frame"+index).val("1");
				}
			});
			//隐藏frame
			for (i=1;i<=4;i++){
				if (i!=index){
					api.setFrameAttr({
						name : 'frame'+i,
						hidden : true
					});
				}
			}
			
			for ( i = 0; i <= 4; i++) {
				if (i == 0) {
					$("#tabbar1 span").removeClass("aui-icon-homefill");
					$("#tabbar1 span").addClass("aui-icon-home")
				}
				if (i == 1) {
					$("#tabbar2 span").removeClass("aui-icon-attentionfill");
					$("#tabbar2 span").addClass("aui-icon-attention")
				}
				if (i == 2) {
					$("#tabbar3 span").removeClass("aui-icon-markfill");
					$("#tabbar3 span").addClass("aui-icon-mark")
				}
				if (i == 3) {
					$("#tabbar4 span").removeClass("aui-icon-myfill");
					$("#tabbar4 span").addClass("aui-icon-my")
				}
				if (i == index) {
					var noobj = $("#tabbar" + (i + 1).toString() + " span");
					var noclass = noobj.attr("class").replace("aui-iconfont ", "");
					noobj.removeClass(noclass)
					noobj.addClass(noclass + "fill");
				}
			}
			
			if (index==1 || index==2){
				fheight=75
			}
			var pageParam = {
				wintitle : "列表",
				type : "frame" + index,
				bounces : true,
				footerheight:footer_h,
			};
			if ($("#frame"+index).val()=="0"){
				opencommframe("frame" + index, "main/frame" + index + ".html", pageParam,fheight);
			}
		});
		
		var pageParam = {
			wintitle : "列表",
			type : "frame1",
			bounces : true,
			footerheight:footer_h,
			
		};
		opencommframe("frame1", "main/frame1.html", pageParam,fheight);
	}
	function opencommframe(wname, url, pageParam,frameheight) {
		api.openFrame({
			name : wname,
			url : url,
			rect : {
				x : 0,
				y : 0,
				w : 'auto',
				h : frameheight
			},
			pageParam : pageParam,
			bounces : false,
			bgColor : 'rgb(255,255,255,255)',
			vScrollBarEnabled : false,
			hScrollBarEnabled : false,
			showProgress : true,
			allowEdit : false,
			reload : false,
			
		});
	}
</script>