	<script type="text/javascript">
		function closeselect() {
			api.execScript({
				name : api.winName,
				script : "keybackFun('1')"
			});
			api.closeFrame();
		}

		apiready = function() {
			changeserverurl();
			
			//选择类别
			$(".small-area span").on("click", function() {
				var categoryId = $(this).attr("category-id");
				
				var assist_id = $(this).attr("assist_id");
				var keywords = $(this).attr("keywords");
				var mSrc="";
				if (assist_id){
					mSrc += "&assist_id="+assist_id;
				}
				if (keywords){
					mSrc += "&keywords="+keywords;
				}
				if (categoryId) {
					var pageParam = {
						type : "price",
						categoryId : categoryId,
						mSrc : mSrc
					};
					openWin("offer-list", "../price/offer-list.html", pageParam);
				}
			});
			$(".price-type").on("click", function() {
				var categoryId = $(this).attr("category-id");
				if (categoryId==""){
					return;
				}
				var assist_id = $(this).attr("assist_id");
				var keywords = $(this).attr("keywords");
				var mSrc="";
				if (assist_id){
					mSrc += "&assist_id="+assist_id;
				}
				if (keywords){
					mSrc += "&keywords="+keywords;
				}
				if (categoryId) {
					var pageParam = {
						type : "price",
						categoryId : categoryId,
						mSrc : mSrc
					};
					openWin("offer-list", "../price/offer-list.html", pageParam);
				}
			});
			
			var $body = $api.dom('body');
			$api.addEvt($body, 'click', function(e) {
				if (e.target == $body) {
					closeselect();
				} else {
					e.stopPropagation();
				}
			});
		}
		

		function selectbutton() {
			
		}
	</script>
