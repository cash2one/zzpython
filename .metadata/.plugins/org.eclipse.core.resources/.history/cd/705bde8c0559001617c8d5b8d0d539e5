	<script type="text/javascript">
		apiready = function() {
			api.parseTapmode();
			ajaxinfo();
			$api.addEvt($api.byId('mark'), 'click', function(){
				closepinlun();
			});
			
			$("body").on("click",".c_pinlun",function(){
				$("#mark").fadeIn();
				$(".sharediv").slideUp();
	        	$(".pinlundiv").slideDown()
	        })
	        $("body").on("click",".openshare",function(){
				$("#mark").fadeIn();
				$(".pinlundiv").slideUp()
	        	$(".sharediv").slideDown()
	        })
	        $("body").on("click",".openpinlun",function(){
	        	var infoid = api.pageParam.infoid;
				var pageParam = {
		          wintitle:"pinlun",
		          type:"pinlun"+infoid,
		          bounces:false,
		          infoid:infoid,
		          hiddentop:true,
		        };
		        openWin("detail"+infoid,"../list/detail.html",pageParam);
	        })
	        //$(".sharediv").slideUp();
		};
		var tab = new auiTab({
			element : document.getElementById("tab"),
		}, function(ret) {
			//alert(JSON.stringify(ret))
			if (ret.index==1){
				$("#tab_1").show();
				$("#tab_2").hide();
			}else{
				$("#tab_1").hide();
				$("#tab_2").show();
			}
			
		});
		var scroll = new auiScroll({
	        listen:true,
	        distance:200 //判断到达底部的距离，isToBottom为true
	    },function(ret){
	        if(ret.isToBottom){
	            //document.getElementById("demo").textContent = "已到达底部";
	        }else{
		        if (ret.scrollTop>50){
		        	$(".closediv").fadeIn();
		        }else{
		        	$(".closediv").fadeOut();
		        }
	            //document.getElementById("demo").textContent = "滚动高度："+ret.scrollTop;
	        }
	
	    });
	    function closepinlun(){
	    	$("#mark").fadeOut();
	        $(".pinlundiv").slideUp();
	        $(".sharediv").slideUp();
	    }
	    function ajaxinfo(){
	    	var data={}
	    	var infoid = api.pageParam.infoid;
	    	loadingshow();
	    	zzappajax("get",hosturl+"/app/newsdetail" + infoid.toString() + ".html?",data,function(ret){
	    		if (ret) {
					var getTpl = $api.html($api.byId("info"));
					laytpl(getTpl).render(ret.result[0], function(html) {
						$(".detail").html(html)
						api.hideProgress();
					});
					
					var speechRecognizer = api.require('speechRecognizer');
					speechRecognizer.read({
					    readStr: delHtmlTag(ret.result[0].content),
					    speed: 60,
					    volume: 60,
					    voice: 0,
					    rate: 16000,
					    audioPath:'fs://speechRecogniser/read.mp3'
					},function(ret,err) {
					    if(ret.status) {
					        ret.speakProgress
					    } else {
					        api.alert({msg:err.msg});
					    }
					});
					loadinghide();
				} else {
					api.toast({
						msg : '网络错误，请重试！',
						duration : 2000,
						location : 'bottom'
					});
					loadinghide();
				};
	    	},function(){
	    		api.toast({
					msg : '网络错误，请重试！',
					duration : 2000,
					location : 'bottom'
				});
	    		loadinghide();
	    	})
	    }
		/*
		var skin = new auiSkin({
		    name:"night", //皮肤样式名字，不能为中文
		    skinPath:'../../css/aui-skin-night.css', //皮肤样式表路径
		    default:false,//是否默认立即使用
		    beginTime:"20:00",//开始时间
		    endTime:"07:00"//结束时间
		})
		skin.setSkin();
		*/
	</script>
