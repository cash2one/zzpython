<script type="text/javascript">
	apiready = function(){
        api.parseTapmode();
    }
    var tab = new auiTab({
        element:document.getElementById("tab"),
        
    },function(ret){
    	var index=ret.index;
    	var m=3
    	if (index==1){
    		m=3
    	}
    	if (index==2){
    		m=1
    	}
    	if (index==3){
    		m=2
    	}
    	api.execScript({
    		name:"root",
			frameName : 'quote',
			script : 'msg_tab('+m+')'
		});
        //console.log(ret)
    });
    function sys_show(){
    	$(".sysmessagestop").show();
    }
    function chat_show(){
    	$(".chatmessages").show();
    }
