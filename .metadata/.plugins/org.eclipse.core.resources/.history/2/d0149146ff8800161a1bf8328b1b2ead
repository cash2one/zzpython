	<script type="text/javascript">
		apiready = function() {
			var closeiosflag=$api.getStorage("closeiosflag");
			if (!closeiosflag || closeiosflag==1){
				$(".czfoot").hide();	
			}
			//页面刷新
			api.setRefreshHeaderInfo({
				visible : true,
				bgColor: '#F2F2F2',
				//bgColor : '#E6E6E6',
				textColor : '#000000',
				textDown : '下拉刷新',
				textUp : '释放刷新',
			}, function(ret, err) {
				ajaxInfo();
				api.toast({
					msg : '数据已是最新！',
					duration : 3000,
					location : 'bottom'
				});
			});
			
			
			$(".aui-tab").on("click", "li",function() {
				$(".aui-tab li").attr("class","");
				$(this).attr("class","active");
				var index=$(this).attr("index");
				if (index==1){
					$(".allservice").show();
					//$(".noservice").show();
					//$(".myservice").show();
					
					$(".alldaijinqian").hide();
				}else{
					$(".alldaijinqian").show();
					
					$(".allservice").hide();
					//$(".noservice").hide();
					//$(".myservice").hide();
				}
			})
			
			//继续购买
			
			$("body").on("click", ".rebuy",function() {
				var dtype=$(this).attr("dtype");
				var index="1";
				if (dtype=="zst"){
					var pageParam = {
						wintitle : "产品服务",
						type : "zz91service",
						bounces : false
					};
					openWin("zz91service", "../service/index.html", pageParam);
					return;
				}
				var wintitle="产品服务"
				if (dtype=="keytop"){
					index="3"
					wintitle="供求置顶服务"
				}
				if (dtype=="showphone"){
					index="2"
					wintitle="显示联系方式"
				}
				if (dtype=="autoreflush"){
					index="12"
					wintitle="供求自动刷新"
				}
				var pageParam = {
					wintitle : wintitle,
					type : "serviceshow"+index,
					bounces : false,
				};
				if (dtype){
					openWin("serviceshow"+index, "../service/show"+index+".html", pageParam);
				}
			})
			$(".chongzhi").on("click", function() {
				if (!UserInfo.has_login()) {
		        	var pageParam = {
						wintitle : "在线充值",
						type : "chongzhi",
						nextUrl : "../myrc/call-moery.html",
						winName : "chongzhi",
						bounces : false,
						pagefrom : "qianbao",
					};
					openWin("frm-login", "../myrc/frm-login.html", pageParam);
					return false;
		        }
		        var pageParam = {
		            wintitle:"在线充值",
		            type:"chongzhi",
		            pagefrom : "qianbao",
		        };
		        var url="../myrc/call-moery.html";
		        //var url=hosturl+"qianbao/chongzhi_new.html?company_id="+UserInfo.memberID()+"&paytype=qianbao"
		        openWin("chongzhi",url,pageParam);
			})
			$(".zz91service").on("click", function() {
				var pageParam = {
					wintitle : "产品服务",
					type : "zz91service",
					bounces : false
				};
				openWin("zz91service", "../service/index.html", pageParam);
			})
			$(".myservice").on("click", function() {
				var pageParam = {
					wintitle : "我的服务",
					type : "myservice",
					bounces : false
				};
				openWin("myservice", "../service/myservice.html", pageParam);
			})
			$(".mypaylist").on("click", function() {
				var pageParam = {
					wintitle : "收支明细",
					type : "burse-bill",
				};
				openWin("burse-bill", "../myrc/burse-bill.html", pageParam);
			})
			//如何赚钱
			$(".howzq").on("click", function() {
				var pageParam = {
					wintitle : "如何赚钱?",
					type : "get-moery"
				};
				openWin("get-moery", "../comm/get-moery.html", pageParam);
			})
			$("body").on("click",".djquse", function() {
				var paytype=$(this).attr("paytype");
				var used=$(this).attr("used");
				if (used=="0"){
					if (paytype=="9"){
						var index="3";
						var pageParam = {
							wintitle : "供求置顶服务",
							type : "serviceshow"+index,
							bounces : false,
						};
					}
					if (paytype=="11"){
						var index="2";
						var pageParam = {
							wintitle : "显示联系方式",
							type : "serviceshow"+index,
							bounces : false,
						};
					}
					openWin("serviceshow"+index, "../service/show"+index+".html", pageParam);
				}
			})
			
			
			api.showProgress({
				title : '加载中',
				modal : false
			});
			ajaxInfo();
		
		}

		function showcontactcheck(valu) {
			$("#showcontactvalue").val(valu);
		}
		function backvaluecheck(valu) {
			$("#backvalue").val(valu);
		}

		function ajaxInfo() {
			var company_id = UserInfo.memberID();
			var usertoken = UserInfo.token();
			api.ajax({
				url : hosturl + 'qianbao/?company_id=' + company_id + '&usertoken=' + usertoken + '&appsystem=' + api.systemType + '&datatype=json&t=' + (new Date()).getTime().toString(),
				method : 'get',
				timeout : 30,
				dataType : 'json',
				returnAll : false
			}, function(ret, err) {
				if (ret) {
					// zzalert(JSON.stringify(ret))
					$(".j_outfeeall").text(ret.outfeeall);
					$(".j_outfeeyd").text(ret.outfeeyd);
					$(".j_infeeall").text(ret.infeeall);
					$(".j_blance").text(ret.blance);
					$(".j_infeeyd").text(ret.infeeyd);
					api.hideProgress();
				} else {
					if(err){
						saveerrlog(err.body);
					}
					//api.hideProgress();
				};
			});
			//我的服务
			var data={
				company_id : UserInfo.memberID(),
				usertoken : UserInfo.token(),
				appsystem : api.systemType,
				datatype : "json",
			}
			api.ajax({
			    url : hosturl + 'qianbao/myservice.html',
			    method : 'get',
			    timeout : 30,
			    dataType : 'json',
			    returnAll : false,
			    data : {
					values : data
				}
			}, function(ret, err) {
			    if (ret) {
			    	// zzalert(JSON.stringify(ret))
			        var pageHtml = "";
			        $.each(ret, function(index, item) {
			        	
				        var getTpl = $api.html($api.byId("info-list"));
				        laytpl(getTpl).render(item, function(html) {
				            pageHtml = pageHtml + html;
				        });
			        })
			        $(".allservice").html(pageHtml);
			        if (pageHtml==""){
			        	$(".noservice").show();
			        	$(".myservice").hide();
			        	$(".allservice").hide();
			        }else{
			        	$(".noservice").hide();
			        	$(".myservice").show();
			        	$(".allservice").show();
			        }
			    } else {
			    	if(err){
						saveerrlog(err.body);
					}
			    };
			    
			});
			//代金券管理
			var data={}
			zzappajax("get",hosturl+"qianbao/mydaijinquanlist.html",data,function(ret){
				var pageHtml = "";
		        $.each(ret, function(index, item) {
		        	if (item.used_id==1){
		        		item.usedclass="";
		        	}else{
		        		item.usedclass="aui-btn-success";
		        	}
			        var getTpl = $api.html($api.byId("djq-list"));
			        laytpl(getTpl).render(item, function(html) {
			            pageHtml = pageHtml + html;
			        });
		        })
		        //zzalert(JSON.stringify(ret))
		        $(".alldaijinqian").html(pageHtml);
			},function(){
			
			})
			api.hideProgress();
			api.refreshHeaderLoadDone();
		}
	</script>
