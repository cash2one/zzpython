<script type="text/javascript" src="../../script/api.js"></script>
<script type="text/javascript" src="../../script/zepto.min.js"></script>
<script type="text/javascript" src="../../script/jquery.js"></script>
<script type="text/javascript" src="../../script/common.js"></script>
<script type="text/javascript" src="../../script/aui-alert.js" ></script>
<script type="text/javascript" src="../../script/laytpl.js"></script>
<script type="text/javascript">
	apiready = function(){
		var key_id=api.pageParam.key_id;
		var data={
			key_id:key_id,
		}
		api.showProgress();
		$("#key_id").val(key_id)
		zzappajax("post",hosturl+"qianbao/jingjia_keywords_info.html",data,function(ret){
			if (ret){
				$(".keywords").val(ret.keywords);
				$(".price").val(toDecimal2(ret.price));
				$("#checked").val(ret.checked);
				if (ret.checked==1){
					$(".keywords_offline").html("下线该关键词");
					$(".keywords_offline").addClass("aui-btn-success");
					$(".keywords_offline").removeClass("aui-btn-danger");
				}else{
					$(".keywords_offline").html("上线该关键词");
					$(".keywords_offline").removeClass("aui-btn-success");
					$(".keywords_offline").addClass("aui-btn-danger");
				}
			}
			api.hideProgress();
		},function(){})
		$(".keywords_mod").on("click",function() {
			event.stopPropagation();
			var keywords=$(".keywords").val();
			if (keywords.length<=0){
				hint("请输入关键词！")
				return;
			}
			var price=$(".price").val();
			var maxprice=8;
			if(!isNaN(price)){
    			if (parseInt(price)<=parseInt(maxprice)){
			    	hint("必须输入大于"+maxprice+"的金额！")
			    }
    		}else{
			   hint("出价必须是数字");
			   return;
			}
			var data={
				key_id:key_id,
				keywords:keywords,
				price:price,
			}
			zzappajax("post",hosturl+"qianbao/jingjia_keywords_onesave.html",data,function(ret){
				if (ret){
					api.execScript({
						name : "jingjia",
						frameName:"jingjia_",
						script : "ajaxinfo()"
					});
					api.closeWin();
				}
			},function(){})
		})
		$(".keywords_offline").on("click",function() {
			
			var data={
				key_id:key_id,
				checked:checked,
			}
			zzappajax("post",hosturl+"qianbao/jingjia_keywords_offline.html",data,function(ret){
				if (ret){
					api.execScript({
						name : "jingjia",
						frameName:"jingjia_",
						script : "ajaxinfo()"
					});
					api.closeWin();
				}
				api.hideProgress();
			},function(){})
		})
	};
</script>
</html>