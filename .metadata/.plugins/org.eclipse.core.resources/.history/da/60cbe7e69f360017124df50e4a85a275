	<script type="text/javascript">
		var currPage = 1;
		var pagecount=1;
		
		apiready = function() {
			changeserverurl();
			//保存分享数据到本地
			var sharelist=api.pageParam.sharelist
			var title=sharelist.title;
			
			localStorage.setItem("share_title",""+title);
			localStorage.setItem("share_description","我正在查看"+title+"，赶紧跟我一起来体验！"+sharelist.url+" 点击链接查看");
			localStorage.setItem("share_url",sharelist.url);
			localStorage.setItem("share_pic",sharelist.pic);
			
			//分享
			var share_url=localStorage.getItem('share_url');
			var share_pic=localStorage.getItem('share_pic');
			var share_title=localStorage.getItem('share_title');
			var share_description=localStorage.getItem('share_description');
			ajaxInfo();
			//底部加载更多
			api.addEventListener({
				name : 'scrolltobottom'
			}, function(ret, err) {
				if (currPage>pagecount){
					$(".la_more").html("全部加载完毕");
					return false;
				}
				//如果底部没有加载更多提示，添加加载更多提示
				$(".la_more").html("加载更多中...");
				setTimeout(function() {
					ajaxInfo();
				}, 1000)
			});
			//更多
			$(".morepro").on("click", function() {
				var pageParam = {
					wintitle : "产品类目",
					type : "product-category",
					bounces : false
				};
				openWin("product-category", "../trade/product-category.html", pageParam);
			})
			$(".share_wx").on("click", function() {
				var wx = api.require('wx');
				wx.shareWebpage({
				    apiKey: '',
				    scene: 'session',
				    title: share_title,
				    description: share_description,
				    thumb: 'widget://res/icon.png',
				    contentUrl: share_url
				}, function(ret, err){
				    if(ret.status){
				        api.toast({
						    msg: '分享成功',
						    duration: 2000,
						    location: 'bottom'
						});
						share_toquan();
				        closeFrame();
				    }else{
				        //zzalert(err.code);
				    }
				});
				
			});
			$(".share_wxq").on("click", function() {
				var wx = api.require('wx');
				wx.shareWebpage({
				    apiKey: '',
				    scene: 'timeline',
				    title: share_title,
				    description: share_description,
				    thumb: 'widget://res/icon.png',
				    contentUrl: share_url
				}, function(ret, err){
				    if(ret.status){
				        api.toast({
						    msg: '分享成功',
						    duration: 2000,
						    location: 'bottom'
						});
						share_toquan();
				        closeFrame();
				    }else{
				        //zzalert(err.code);
				    }
				});
				
			});
			$(".share_qq").on("click", function() {
				var obj = api.require('qq');
				obj.shareNews({
					url : share_url,
					title : share_title,
					description : share_description,
					imgUrl : share_pic,
					type : "QFriend",
				}, function(ret, err) {
					if (ret.status) {
						api.toast({
						    msg: '分享成功',
						    duration: 2000,
						    location: 'bottom'
						});
						share_toquan();
						closeFrame();
					} else {
						//zzalert(err.body);
					}
				});
			});
			$(".share_qzone").on("click", function() {
				var obj = api.require('qq');
				obj.shareNews({
					url : share_url,
					title : share_title,
					description : share_description,
					imgUrl : share_pic,
					type : "QZone",
				}, function(ret, err) {
					if (ret.status) {
						api.toast({
						    msg: '分享成功',
						    duration: 2000,
						    location: 'bottom'
						});
						share_toquan();
						closeFrame();
					} else {
						//zzalert(err.body);
					}
				});
			});
			//打开供求
			$(".prolist").on("click", "li", function() {
				var id = $(this).attr("id");
				var pageParam = {
					wintitle : "供求详情",
					type : "infomation-heart",
					id : id,
					nav_list : [{
						"typename" : "供求详情",
						"id" : 1
					}, {
						"typename" : "公司简介",
						"id" : 2
					}], //头部划动标题
					frame_url : ["../trade/firm-detail.html", "../trade/firm.html"], //打开frame组的页面集合
					topnumber : 2,
					pagename : "tradedetail",
					bounces : false
				};
				openWin("infomation-heart"+id, "infomation-heart.html", pageParam);
			})
			//我的供求
			$(".my-buyin").on("click", function() {
				var pageParam = {
					wintitle : "我的供求",
					type : "infomation-heart",
					nav_list : [{
						"typename" : "已经审核",
						"id" : 1
					}, {
						"typename" : "审核中",
						"id" : 2
					}, {
						"typename" : "未通过",
						"id" : 3
					}, {
						"typename" : "暂不发布",
						"id" : 4
					}],
					//frame_url : ["../myrc/audit.html", "../myrc/my-supply.html", "../myrc/not-by.html", "../myrc/notout.html"],
					frame_url : ["../myrc/audit.html"],
					topnumber : 3,
					bounces : false
				};
				if (UserInfo.has_login()) {//判断是否登录
					openWin("buyinout", "widget://html/comm/infomation-heart.html", pageParam);
				} else {
					pageParam.nextUrl = "widget://html/comm/infomation-heart.html";
					pageParam.winName = "buyinout";
					openWin("frm-login", "../myrc/frm-login.html", pageParam);
				}
			})
		};
		var dataload = true;
		function ajaxInfo() {
			if (dataload == false) {
				return false;
			}
			dataload = false;
			
			var keywords=api.pageParam.keywords;
			var trade_type=api.pageParam.trade_type;
			var ptype=0;
			if (trade_type=="10331000"){
				ptype=2
			}
			if (trade_type=="10331001"){
				ptype=1
			}
			//alert(keywords)
			var data={
				company_id : UserInfo.memberID(),
				forcompany_id : api.pageParam.forcompany_id,
				usertoken : UserInfo.token(),
				appsystem : api.systemType,
				datatype : "json",
				page : currPage,
				keywords:keywords,
				ptype:ptype,
			}
			api.ajax({
				url : hosturl +"offerlist/",
				method : "get",
				timeout : 30,
				dataType : 'json',
				returnAll : false,
				data : {
					values : data
				}
			}, function(ret, err) {
				//zzalert( JSON.stringify( ret ) );
				if (ret){
					var productList;
					if (currPage == 1) {
						pagecount=ret.pagecount;
						productList = ret.productList;
					}
					
					if (currPage != 1) {
						productList = ret;
					}
					var pageHtml = "";
					$.each(productList, function(index, item) {
						var getTpl = $api.html($api.byId("info-list"));
						laytpl(getTpl).render(item, function(html) {
							pageHtml = pageHtml + html;
						});
					});
					
					if (currPage == 1) {
						if (pageHtml==""){
		            		$(".nodata").show();
		            		$(".la_more").hide();
		            	}else{
		            		$(".nodata").hide();
		            		$(".la_more").show();
		                }
		                if (pageHtml==""){
		                	$(".prolist").html("<center style='font-size:18px;line-height:90px;color:#999'>暂时没有发布供求信息</center>");
		                }else{
		                	$(".prolist").html(pageHtml);
		                }
		            }else{
						$(".prolist").append(pageHtml);
		            }
					
					if (pageHtml!=""){
						currPage += 1;
						$(".la_more").html("上拉获取更多信息");
					}else{
						$(".la_more").html("全部加载完毕");
					}
					api.refreshHeaderLoadDone();
					api.hideProgress();
					dataload = true;
					$("#loading").hide();
					$(".aui-content").show();
				}
				if(err){
					saveerrlog(err.body);
				}
			});
		}
		
	</script>
	<script type="text/javascript" src="../../script/servercomm.js"></script>
