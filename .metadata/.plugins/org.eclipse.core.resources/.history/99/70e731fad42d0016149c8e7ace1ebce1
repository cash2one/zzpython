			<span> {{ d.fcount }}</span>
			</span>
			</div>
			<div class="clear"></div>
			</a>
		</script>
		<script>
			var currPage = 1;
			var stoploading = false;
			var typeid = "0";
		</script>
		<script type="text/javascript" src="../script/api.js"></script>
		<script type="text/javascript" src="../script/zepto.min.js"></script>
		<script type="text/javascript" src="../script/iscroll.js"></script>
		<script type="text/javascript" src="../script/swipe.min.js"></script>
		<script type="text/javascript" src="../script/DBapi.js"></script>
		<script type="text/javascript" src="../script/common.js"></script>
		<script type="text/javascript" src="../script/laytpl.js"></script>
		<script>
			function sliding() {
				api.openSlidPane({
					type : 'left'
				});
			}
			function changesexmain(tid) {
				typeid = tid;
				if (!api){changesexmain(tid);return;}
				$(".midload").css("padding-top", api.winHeight / 2 - 150);
				$(".midload").css("display", "block");
				//下拉刷新
				api.setRefreshHeaderInfo({
					visible : true,
					// bgColor: '#F2F2F2',
					bgColor : '#E6E6E6',
					textColor : '#000000',
					textDown : '下拉刷新',
					textUp : '释放刷新',
				}, function(ret, err) {
					changesexmain(typeid)
					api.refreshHeaderLoadDone();
					api.hideProgress();
					api.toast({
						msg : '数据已是最新！',
						duration : 3000,
						location : 'bottom'
					});
				});
				api.addEventListener({
					name : 'scrolltobottom'
				}, function(ret, err) {
					loadmorelist(hosturl + '/sex/list.html?pagetype=json&typeid=' + typeid.toString() + '&page=', currPage + 1);
				});
				//api.showProgress({title:'加载中',model:false});
				api.ajax({
					url : hosturl + '/sex/list.html?pagetype=json&typeid=' + typeid.toString() + '&page=' + currPage,
					method : 'get',
					timeout : 30,
					dataType : "json",
					returnAll : false
				}, function(ret, err) {
					if (ret) {
						var pageHtml = "";
						$.each(ret.result, function(index, item) {
							if (item.picmore != null) {
								item.display = "none";
								item.picmore_dispaly = "block";
								var getTpl = $api.html($api.byId("info-list"));
							} else if (!item.picone) {
								item.display = "none";
								item.picmore = [];
								var getTpl = $api.html($api.byId("info-list"));
							} else {
								item.picmore = [];
								var getTpl = $api.html($api.byId("info-list"));
							}
							//							var getTpl = $api.html($api.byId("info-list"));
							laytpl(getTpl).render(item, function(html) {
								pageHtml = pageHtml + html;
							});
							localStorage.setItem('havehtml'+tid,tid.toString());
						})
						if (pageHtml == "") {
							//changesexmain(tid)
						} else {
							pageHtml = '<div class="list">' + pageHtml + '</div>';
							$(".newslist").html(pageHtml);
							$(".jzmore").css("display", "block");
						}
					} else {
						$(".newslist").html("<div style='width=100%;text-align:center;padding-top:20px;height:100%'>暂无信息</div>");
						$(".jzmore").css("display", "none");
						api.toast({
							msg : ('错误码：' + err.code + '；错误信息：' + err.msg + '网络状态码：' + err.statusCode),
							duration : 3000,
							location : 'bottom'
						});
					}
					api.hideProgress();
					sstop();
				});
			}

			apiready = function() {
				
				$(".midload").css("padding-top", api.winHeight / 2 - 150);
				$(".midload").css("display", "block");
				typeid = api.pageParam.typeid;
				//changesexmain(typeid)
				api.addEventListener({
					name : 'scrolltobottom'
				}, function(ret, err) {
					loadmorelist(hosturl + '/sex/list.html?pagetype=json&typeid=' + typeid.toString() + '&page=', currPage + 1);
				});
				//下拉刷新
				api.setRefreshHeaderInfo({
					visible : true,
					// bgColor: '#F2F2F2',
					bgColor : '#E6E6E6',
					textColor : '#000000',
					textDown : '下拉刷新',
					textUp : '释放刷新',
				}, function(ret, err) {
					changesexmain(typeid)
					api.refreshHeaderLoadDone();
					//api.hideProgress();
					api.toast({
						msg : '数据已是最新！',
						duration : 3000,
						location : 'bottom'
					});
				});
				$(".jzmore").click(function() {
					loadmorelist(hosturl + '/sex/list.html?pagetype=json&typeid=' + typeid.toString() + '&page=', currPage + 1);
				});
			};
			function sstop() {
				api.pageUp(function(ret) {
					if (!ret.scrolled) {
						//alert(1)
					} else {
						sstop();
					}
				});
			}

			function toDetail(id) {
				var pageParam = {
					id : id,
					t : (new Date()).getTime().toString(),
					wintitle : "正文",
					type : "detail"
				};
				openWin("detail", "detail.html", pageParam);
			}

			function loadmorelist(url, page) {
				if (stoploading == false) {
					stoploading = true;
					$(".jzmore").html("<span class=\"mui-spinner\"></span> 更多加载中...");
					api.ajax({
						url : url + page,
						method : 'get',
						timeout : 30,
						data : {},
						dataType : "json",
						returnAll : false
					}, function(ret, err) {
						if (ret && ret != "") {
							var pageHtml = "";
							$.each(ret.result, function(index, item) {
								if (item.picmore != null) {
									item.display = "none";
									item.picmore_dispaly = "block";
									var getTpl = $api.html($api.byId("info-list"));
								} else if (!item.picone) {
									item.display = "none"
									item.picmore = [];
									var getTpl = $api.html($api.byId("info-list"));
								} else {
									item.picmore = [];
									var getTpl = $api.html($api.byId("info-list"));
								}
								//var getTpl = $api.html($api.byId("info-list"));
								laytpl(getTpl).render(item, function(html) {
									pageHtml = pageHtml + html;
								});
							})
							pageHtml = '<div class="list">' + pageHtml + '</div>';
							$(".newslist").append(pageHtml);
							stoploading = false;
							currPage = page;
							//api.hideProgress();
							$(".jzmore").html("点击加载更多");
						} else {
							stoploading = false;
							$(".jzmore").css("display", "none");
						};
					});
				}
			}
		</script>
	</body>
</html>