<script type="text/javascript">
	apiready = function(){
		$(".aui-list").on("click","li",function(){
        	//var infoid = $(this).attr("infoid")
        	var infoid="1"
			var pageParam = {
	          wintitle:"资讯详情",
	          type:"detail",
	          bounces:false,
	          infoid:infoid,
	        };
	        openWin("detail"+infoid,"../list/detail.html",pageParam);
        })
	};
	function ajaxinfo(){
		var typeid=api.pageParam.typeid;
		if (typeid){
			var url="app/list-"+typeid+".html"
			zzappajax("get",hosturl+url,data,function(ret){
				var pageHtml = "";
				$.each(ret.pricelist.list, function(index, item) {
					var getTpl = $api.html($api.byId("info-list"));
					laytpl(getTpl).render(item, function(html) {
						pageHtml = pageHtml + html;
					});
				})
				$(".price-list").html(pageHtml);
			},function(){})
		}
	}
	/*
	var skin = new auiSkin({
	    name:"night", //皮肤样式名字，不能为中文
	    skinPath:'../../css/aui-skin-night.css', //皮肤样式表路径
	    default:false,//是否默认立即使用
	    beginTime:"20:00",//开始时间
	    endTime:"07:00"//结束时间
	})
	skin.setSkin();
