	<script type="text/javascript">
		var paymoney=0;
		var djqlist =[];//代金券ID
		apiready = function() {
			var closeiosflag = $api.getStorage("closeiosflag");
			if (!closeiosflag || closeiosflag == 1) {
				$(".buybutton").hide();
			}
			$(".buybutton").on("click", function() {
				event.stopPropagation();
				if (havelogin()) {
					paysubmit();
				}
			})
			$(".aui-radio").on("click", function() {
				event.stopPropagation();
				getmoneyall();
			})
			$(".aui-checkbox").on("click", function() {
				event.stopPropagation();
				getmoneyall();
			})
			getmoneyall()
		};
		function getmoneyall(){
			var shuaxinselect=0;
			
			$('input[name="showcontact"]:checked').each(function(){
				shuaxinselect+=parseInt($(this).attr("money"));
				//chk_value.push($(this).val());
			});
			$('input[name="daijqcheck"]:checked').each(function(){
				shuaxinselect+=parseInt($(this).attr("money"));
				djqlist.push($(this).val());
			});
			$(".paymoney").html("¥<strong>"+shuaxinselect+"</strong>元");
			paymoney=shuaxinselect;
		}
		
		function paysubmit(){
			api.showProgress({
				title : '扣款中...',
				modal : false
			});
			
			if (paymoney==0){
				return;
			}
			var company_id = UserInfo.memberID();
			//alert(company_id)
			var usertoken = UserInfo.token();
			var data = {
				paytype : '42',
				money : paymoney,
				company_id : company_id,
				usertoken : usertoken,
				appsystem : api.systemType,
				datatype : 'json',
				t : (new Date()).getTime().toString(),
				voucher_id:voucher_id,
			}
			api.ajax({
				url : hosturl + 'qianbao/qianbaopay.html',
				method : 'get',
				timeout : 30,
				dataType : 'json',
				returnAll : false,
				data : {
					values : data
				}
			}, function(ret, err) {
				if (ret) {
					if (ret.err == 'false') {
						zzalert(ret.errtext);
						api.confirm({
							title : '提示',
							msg : ret.errtext,
							buttons : ['关闭', '查看我的服务']
						}, function(ret, err) {
							if (ret) {
								if (ret.buttonIndex == 2) {
									var pageParam = {
										wintitle : "我的服务",
										type : "myservice",
									};
									openWin("myservice", "../service/myservice.html", pageParam);
								} else {
									api.closeWin();
								}
							} else {
							}
						});
					}
					if (ret.err == 'true' && ret.blanceflag == '0') {
						yuebuzuFun();
					}
					if (ret.err == 'true' && ret.blanceflag == '1') {
						zzalert(ret.errtext);
					}
					api.hideProgress();
				} else {
					api.hideProgress();
					if (err) {
						saveerrlog(err.body);
					}
				};
			});
		}

		function backvaluecheck(valu) {
			$("#backvalue").val(valu);
		}
	</script>
