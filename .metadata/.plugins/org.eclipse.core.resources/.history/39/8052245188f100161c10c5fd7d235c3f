	<script type="text/javascript">
		var paymoney=0;
		var datevalue=0;
		var djqlist ="0";//代金券ID
		var proid=0;
		var blance=0;
		var maxprice=8;
		var minblance=100;

		apiready = function() {
			proid=api.pageParam.proid;
			protitle=api.pageParam.title;
			$(".protitle").html(protitle);
			var closeiosflag = $api.getStorage("closeiosflag");
			if (!closeiosflag || closeiosflag == 1) {
				$(".buybutton").hide();
			}
			$(".buybutton").on("click",function() {
				event.stopPropagation();
				if (havelogin()) {
					savesubmit();
				}
			})
			//选择供求
			$(".selectproduct").on("click",function() {
				event.stopPropagation();
				openwindows("selectproduct", '../service/selectpro.html')
			})
			
			//选择已有关键词
			$(".selectkeywords").on("click", function() {
				openwindows("selectkeywords", '../trade/category.html');
			});
			//添加关键词
			$(".addkeywords").on("click", function() {
				api.prompt({
					title:"提示",
					msg:"请输入关键词，字符数小于6个",
				    buttons: ['确定', '取消']
				}, function(ret, err){
				    if( ret ){
				    	if(ret.buttonIndex==1){
				    		key=ret.text;
				    		if (key.length>6 || key.length<=0){
				    			zzalert("字符数必须小于6个！");
				    			return;
				    		}else{
				    			xztradecode(key,'')
				    		}
				    	}
				    }
				})
				
			});
			//出价
			$(".price").on("click", function() {
				api.prompt({
					title:"提示",
					text:$("#price").val(),
					type:'number',
					msg:"最低出价不低于"+maxprice.toString()+"元,每次加价大于1元",
				    buttons: ['确定', '取消']
				}, function(ret, err){
				    if( ret ){
				    	if(ret.buttonIndex==1){
				    		if(!isNaN(ret.text)){
				    			if (parseInt(ret.text)>=parseInt(maxprice)){
									$("#price").val(toDecimal2(ret.text));
									return;
							    }else{
							    	zzalert("必须输入大于"+maxprice+"的金额！")
							    }
				    		}else{
							   zzalert("请输入数字");
							}
				    	}
				    }
				})
				
			});
			//删除关键词
			$(".get-xinx").on("click", ".remove", function() {
				var spanFt = $(this).parent()
				spanFt.hide(300, function() {
					spanFt.remove()
				})
				var num=0
				$(".keywords_list span font").each(function() {
					num+=1;
				});
				if (num==1){
					$(".nokeywords").show();
				}
			});
			//充值
			$(".chongzhi").on("click", function() {
				if (!UserInfo.has_login()) {
					var pageParam = {
						wintitle : "在线充值",
						type : "chongzhi",
						nextUrl : "../myrc/call-moery.html",
						winName : "chongzhi",
						bounces : false
					};
					openWin("frm-login", "../myrc/frm-login.html", pageParam);
					return false;
				}
				var pageParam = {
					wintitle : "在线充值",
					type : "chongzhi",
					bounces : false,
				};
				var url = "../myrc/call-moery.html"
				//var url=hosturl+"qianbao/chongzhi_new.html?company_id="+UserInfo.memberID()+"&paytype=qianbao"
				openWin("chongzhi", url, pageParam);
				confirmzhifu();
			})
			ajaxInfo();
			
		};
		//添加供求类别
		function xztradecode(label,code){
			var flag=false;
			//alert(label)
			var num=1
			$(".keywords_list span font").each(function() {
				if ($(this).text()==label){
					api.toast({
					    msg: '已经添加',
					    duration: 2000,
					    location: 'bottom'
					});
					flag=true;
					return false;
				}
				if (num>=5){
					api.toast({
					    msg: '关键字最多5个！',
					    duration: 2000,
					    location: 'bottom'
					});
					flag=true;
					return false;
				}
				num+=1;
			});
			if (flag==false){
				label=label.replace(","," ")
				var trade_span = '<span><font>' + label + '</font><i class="remove aui-iconfont aui-icon-roundclosefill"></i></span>';
				$(".keywords_list").append(trade_span);
				$(".nokeywords").hide();
			}
		}
		//选择供求
		function selectproducts(product_id,productname){
			$("#productname").val(unescape(productname));
			$("#product_id").val(product_id);
		}
		function ajaxInfo(){
			zzappajax("get",hosturl+"qianbao/jingjia_info.html","",function(ret){
				if (ret){
					maxprice=ret.maxprice;
					minblance=ret.minblance;
					getbalance();
				}
			},function(){
				zzalert("读取余额错误！")
			})
		}
		//获取余额
		function getbalance(){
			//获得余额
			zzappajax("get",hosturl+"qianbao/qianbaobaoblance.html","",function(ret){
				if (ret){
					var blance=ret.blance;
					var showphpne=ret.showphone;
					$(".balancenum").html(blance);
					//余额少于500元提醒充值
					if (blance>=minblance){
						$(".nomeny").hide();
						$(".qianbaobalace").hide();
						$("#yuerflag").val(1)
					}else{
						$(".nomeny").show();
						$(".chongzhitext").html("钱包余额大于"+minblance.toString()+"元才能开通此服务。")
						$(".qianbaobalace").show();
						$("#yuerflag").val(0)
					}
				}
			},function(){
				zzalert("读取余额错误！")
			})
		}
		//确认支付完成
		function confirmzhifu(){
			var html = "";
			html += '<p style="color: #000000;">你是否已经完成支付</p>'
			$aui.alert({
				title : '',
				content : html,
				buttons : ['确定','取消'],
				radius : 10,
				titleColor : '#333',
				contColor : '#333',
				btnColor : '',
				wintype:''
			}, function(ret) {
				getbalance();
			})
		}
		//开通服务
		function savesubmit() {
			var keywordslist="";
			getbalance();
			$(".keywords_list span font").each(function() {
				keywordslist = keywordslist + $(this).text() + ",";
			});
			if (keywordslist==""){
				hint("请添加或选择关键词！");
				return false;
			}
			var price=$("#price").val();
			if (price.length<=0){
				hint("请填写出价！");
				return false;
			}
			var product_id=$("#product_id").val();
			if (product_id==0){
				hint("请选择供求！");
				return false;
			}
			var yuerflag=$("#yuerflag").val();
			if (yuerflag==0){
				hint("你的余额不足"+minblance.toString()+"元，不能开通服务，请充值后再开通！");
				return false;
			}
			
			api.showProgress({
				title : '保存中...',
				modal : false
			});
			var data = {
				keywords:keywordslist,
				price:price,
				product_id:product_id,
			}
			zzappajax("post",hosturl+"qianbao/jingjia_keywords_save.html",data,function(ret){
				if (ret.err == "false") {
					//hint(ret.errkey);
					zzalert(ret.errkey);
					api.execScript({
						name : "jingjia",
						frameName:"jingjia_",
						script : "ajaxinfo()"
					});
					api.closeWin();
				} else {
					hint(ret.errkey);
				}
			},function(){
				zzalert("系统错误！")
			})
			
				
		}

		function showcontactcheck(valu) {
			$("#showcontactvalue").val(valu);
		}
	</script>
	<script type="text/javascript" src="../../script/servercomm.js"></script>
