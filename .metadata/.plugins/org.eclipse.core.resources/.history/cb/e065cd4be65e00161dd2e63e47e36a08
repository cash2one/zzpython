<script type="text/javascript" src="../../script/aui-scroll.js" ></script>
<script type="text/javascript">
	var currPage=1;
	var pagecount=1;
	apiready = function(){
		var tutype=document.getElementById("tutype");
		$("body").on("click",".detaillist",function(){
        	var infoid = $(this).attr("infoid")
			var pageParam = {
	          wintitle:"详情",
	          type:"detail",
	          bounces:false,
	          infoid:infoid,
	          hiddentop:true,
	        };
	        openWin("detail"+infoid,"../list/detail.html",pageParam);
        })
        $("#selecttu").on("click",function(){
        	if (tutype.checked==false){
        		tutype.checked=true;
        		$api.setStorage("tutype",0);
        	}else{
        		tutype.checked=false;
        		$api.setStorage("tutype",1);
        	}
        	currPage = 1;
        	ajaxinfo();
        })
        var tutypevalue=$api.getStorage("tutype");
        if (tutypevalue==0){
        	tutype.checked=true;
        }else{
        	tutype.checked=false;
        }
        ajaxinfo();
        //底部加载更多
		api.addEventListener({
			name : 'scrolltobottom'
		}, function(ret, err) {
			if (currPage>pagecount){
				$(".la_more").html("全部加载完毕");
				return false;
			}
			//如果底部没有加载更多提示，添加加载更多提示
			$(".la_more").html("加载更多中...");
			setTimeout(function() {
				ajaxinfo();
			}, 1000)
		});
		//页面刷新
		api.setRefreshHeaderInfo({
			visible : true,
			// bgColor: '#F2F2F2',
			bgColor : '#E6E6E6',
			textColor : '#000000',
			textDown : '下拉刷新',
			textUp : '释放刷新',
		}, function(ret, err) {
			currPage = 1;
			ajaxinfo();
			api.toast({
				msg : '数据已是最新！',
				duration : 3000,
				location : 'bottom'
			});
		});
        
        //
        var scroll = new auiScroll({
	        listen:true,
	        distance:200 //判断到达底部的距离，isToBottom为true
	    },function(ret){
	        if(ret.isToBottom){
	        }else{
		        if (ret.scrollTop>150){
		        	$(".topdiv").fadeIn();
		        }else{
		        	$(".topdiv").fadeOut();
		        }
	        }
	    });
	};
	var dataload = true;
	function ajaxinfo(){
		if (dataload == false) {
			return false;
		}
		dataload = false;
		var typeid=api.pageParam.typeid;
		//api.showProgress({title:'加载中',modal:false});
		loadingshow();
		if (typeid){
			var url="/app/list.html?"+ (new Date()).getTime().toString();
			var data={
				"typeid":typeid,
				"datatype":"json",
				"page":currPage,
			}
			zzappajax("get",hosturl+url,data,function(ret){
				var pageHtml = "";
				var tutype=document.getElementById("tutype");
				pagecount=ret.pagecount;
				if (tutype.checked==true){
					$.each(ret.result, function(index, item) {
						var getTpl = $api.html($api.byId("info-list-da"));
						if (!item.picone){
							item.picdisplay="none";
						}else{
							item.picdisplay=""
						}
						laytpl(getTpl).render(item, function(html) {
							pageHtml = pageHtml + html;
						});
					})
					if (currPage == 1) {
						if (pageHtml==""){
		            		$(".nodata").show();
		            		$(".la_more").hide();
		            	}else{
		            		$(".nodata").hide();
		            		$(".la_more").show();
		                }
		                $(".danewslist").html(pageHtml);
		                api.pageUp({
							'top' : true
						});
						$(".datu").show();
						$(".xiaotu").hide();
		            }else{
						$(".danewslist").append(pageHtml);
		            }
					
				}else{
					$.each(ret.result, function(index, item) {
						var getTpl = $api.html($api.byId("info-list-xiao"));
						if (!item.picone){
							item.picdisplay="none";
						}else{
							item.picdisplay=""
						}
						laytpl(getTpl).render(item, function(html) {
							pageHtml = pageHtml + html;
						});
					})
					if (currPage == 1) {
						if (pageHtml==""){
		            		$(".nodata").show();
		            		$(".la_more").hide();
		            	}else{
		            		$(".nodata").hide();
		            		$(".la_more").show();
		                }
		                $(".xiaonewslist").html(pageHtml);
		                api.pageUp({
							'top' : true
						});
						$(".datu").hide();
						$(".xiaotu").show();
		            }else{
						$(".xiaonewslist").append(pageHtml);
		            }
				}
				if (pageHtml!=""){
					currPage += 1;
					$(".la_more").html("上拉获取更多信息");
				}else{
					$(".la_more").html("全部加载完毕");
				}
				api.refreshHeaderLoadDone();
				dataload = true;
				loadinghide()
			},function(){
				api.toast({
					msg : '网络错误，请重试！',
					duration : 2000,
					location : 'bottom'
				});
				dataload = true;
				loadinghide()
			})
		}else{
			api.toast({
				msg : '网络错误，请重试！',
				duration : 2000,
				location : 'bottom'
			});
			dataload = true;
			loadinghide()
		}
	}
	/*
	var skin = new auiSkin({
	    name:"night", //皮肤样式名字，不能为中文
	    skinPath:'../../css/aui-skin-night.css', //皮肤样式表路径
	    default:false,//是否默认立即使用
	    beginTime:"20:00",//开始时间
	    endTime:"07:00"//结束时间
	})
	skin.setSkin();
	*/
</script>
</html>