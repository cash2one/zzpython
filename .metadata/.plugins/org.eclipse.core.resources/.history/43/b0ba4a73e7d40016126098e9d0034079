					status1=ret.status2
					tgd1=ret.tgd2
				}else{
					figure1=ret.figure1;
					status1=ret.status1
					tgd1=ret.tgd1
				}
				var weatherimg="http://php.weather.sina.com.cn/images/yb3/78_78/"+figure1+"_1.png"
				$(".weatherimg").attr("src",weatherimg)
				$(".weathertxt").html(city+" "+status1+" "+tgd1+"℃")
				
