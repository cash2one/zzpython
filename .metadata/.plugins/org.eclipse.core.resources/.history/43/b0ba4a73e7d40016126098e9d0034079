			zzappajax("get",hosturl+"/app/urlencode.html?city="+city+"&"+(new Date()).getTime().toString(),"",function(ret){
				var cityen=ret.city;
				var figure1='';
				var status1='';
				var tgd1='';
				var nowdint=parseInt(ret.nowdint);
				if (nowdint>=18 || nowdint<=6){
