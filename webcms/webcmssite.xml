<uwsgi>
 <socket>:8006</socket>
 <workers>2</workers>
 <master>true</master>
 <processes>2</processes>
 <listen>100</listen>
 <pythonpath>.</pythonpath>
 <module>webcms.wsgi</module>
 <profiler>true</profiler>
 <memory-report>true</memory-report>
 <enable-threads>true</enable-threads>
 <wsgi-file>webcms/wsgi.py</wsgi-file>
 <logdate>true</logdate>
 <limit-as>1000</limit-as>
 <reload-on-as>400</reload-on-as>
 <reload-on-rss>400</reload-on-rss>
 <max-requests>400</max-requests>
 <daemonize>/mnt/var/log/uwsgi/webcms.log</daemonize>
</uwsgi>