<uwsgi>
 <socket>:8039</socket>
 <workers>5</workers>
 <master>true</master>
 <listen>100</listen>
 <processes>10</processes>
 <pythonpath>.</pythonpath>
 <module>bestjoy.wsgi</module>
 <profiler>true</profiler>
 <memory-report>true</memory-report>
 <enable-threads>true</enable-threads>
 <wsgi-file>bestjoy/wsgi.py</wsgi-file>
 <logdate>true</logdate>
 <limit-as>1000</limit-as>
 <reload-on-as>800</reload-on-as>
 <reload-on-rss>800</reload-on-rss>
 <max-requests>800</max-requests>
 <daemonize>/mnt/var/log/uwsgi/bestjoy.log</daemonize>
</uwsgi>