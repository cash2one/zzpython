			var currPage = 1;
			var stoploading = false;
			// var aid=api.pageParam.aid;
			function changesexmain(aid) {
				api.showProgress();
				api.ajax({
					url : hosturl+'/sex/show_feedback.html?aid='+aid,
					method : 'get',
					timeout : 30,
					data : {},
					dataType : "json",
					returnAll : false
				}, function(ret, err) {
					var pageHtml = "";
					if (ret) {
						$.each(ret.result,function(index,item){
							var getTpl = $api.html($api.byId("info-list"));
							laytpl(getTpl).render(item, function(html) {
								pageHtml = pageHtml + html;
							});
						})
						$("#span_reviewcount").html(ret.listcount)
						$("#MyComments").html(pageHtml);
					}
					else {
						$("#MyComments").html("<div style='width=100%;text-align:center;padding-top:20px;height:100%'>暂无信息</div>");
						$(".jzmore").css("display", "none");
						api.toast({
							msg : ('错误码：' + err.code + '；错误信息：' + err.msg + '网络状态码：' + err.statusCode),
							duration : 3000,
							location : 'bottom'
						});
					}
					api.hideProgress();
				});
			};
			function ShowReply(){
				var obj = api.require('inputField');
				obj.open({
				    bgColor:'#FFFFFF',
				    lineColor:'#E1E1E1',
				    fileBgColor:'#FFFFFF',
				    borderColor:'#E1E1E1',
				    sendImg:'widget://image/oktrue.png',
				    maxLines: 60,
				    placeholder:"您的回复..."
				},function(ret,err) {
				    obj.close(function(ret,err){});
				});
				function inputField(){
		　　　　　　obj.close(function(ret,err){});
		　　　　}
				return inputField;
			}
			apiready = function() {
				var isfirst = true,inputFd;
				$(window).scroll(function(){
					if(isfirst){
						inputFd = ShowReply();
						isfirst = false;
					}
					inputFd();
				})
				var aid = api.pageParam.aid;
				api.addEventListener({
